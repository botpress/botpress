{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "main": "bin/node.bundle.js",
  "botpress": {
    "menuText": "<%= name %>",
    "menuIcon": "view_module",
    "webBundle": "bin/web.bundle.js",
    "noInterface": false,
    "moduleView": {
      "stretched": false
    }
  },
  "scripts": {
    "test": "npm run lint && npm run mocha",
    "mocha": "NODE_ENV=test mocha --require babel-register --recursive",
    "lint": "eslint ./*.js src/**/*.{js,jsx,scss}",
    "watch": "node webpack.js --watch",
    "compile": "node webpack.js --compile"
  },
  "author": "<%= author %>",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.3.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "json-loader": "^0.5.7",
    "minimum-node-version": "^1.0.1",
    "mocha": "^4.0.1",
    "node-sass": "^4.5.3",
    "prettier": "^1.7.4",
    "react": "^16.2.0",
    "react-bootstrap": "^0.31.2",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.4.1",
    "webpack-node-externals": "^1.6.0"
  },
  "engines": {
    "node": ">=6.10.0"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "react",
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ],
        "plugins": ["transform-object-rest-spread", "add-module-exports"]
      }
    }
  }
}
