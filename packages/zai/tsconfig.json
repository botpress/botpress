{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": false,
    "paths": {
      "@botpress/zai": ["./src/zai.ts"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "vitest.d.ts", "e2e/**/*"]
}
