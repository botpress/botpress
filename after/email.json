      "schema": {
        "type": "object",
        "properties": {
          "currentlySyncing": {
            "type": "boolean",
            "x-zui": {},
            "default": false
          }
        },
        "additionalProperties": false,
        "x-zui": {},
        "$schema": "http://json-schema.org/draft-07/schema#"
      }
    }
  },
  "interfaces": {}
