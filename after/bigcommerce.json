{
  "name": "bigcommerce",
  "version": "3.2.0",
  "title": "BigCommerce",
  "description": "Sync products from BigCommerce to Botpress",
  "actions": {
    "syncProducts": {
      "title": "Sync Products",
      "description": "Get all products from BigCommerce and sync them to a Botpress table with background processing",
      "input": {
        "schema": {
          "type": "object",
          "properties": {},
          "additionalProperties": false,
          "x-zui": {},
          "$schema": "http://json-schema.org/draft-07/schema#"
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "success": {
              "type": "boolean",
              "description": "Whether the sync was successful",
              "x-zui": {}
            },
            "message": {
              "type": "string",
              "description": "Status message",
              "x-zui": {}
            },
            "productsCount": {
              "type": "number",
              "description": "Total number of products processed",
              "x-zui": {}
            },
            "firstPageProcessed": {
              "type": "number",
              "description": "Number of products processed from first page",
              "x-zui": {}
            },
            "totalPages": {
              "type": "number",
              "description": "Total number of pages",
              "x-zui": {}
            },
            "backgroundProcessing": {
              "type": "boolean",
              "description": "Whether background processing was used",
              "x-zui": {}
            },
            "lastProcessedPage": {
              "type": "number",
              "description": "Last page processed during background processing",
              "x-zui": {}
            },
            "backgroundErrors": {
              "type": "array",
              "items": {
                "type": "string",
                "x-zui": {}
              },
              "description": "Errors encountered during background processing",
              "x-zui": {}
            }
          },
          "required": [
            "success",
            "message",
            "productsCount",
            "firstPageProcessed",
            "totalPages",
            "backgroundProcessing"
          ],
          "additionalProperties": false,
          "x-zui": {},
          "$schema": "http://json-schema.org/draft-07/schema#"
        }
      }
    }
  },
  "states": {},
  "interfaces": {}
}
