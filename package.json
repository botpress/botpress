{
  "name": "cloud",
  "private": true,
  "scripts": {
    "build": "pnpm -r --stream build",
    "type:check": "pnpm -r --stream type:check",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint ./ --ext .ts --ext .tsx",
    "lint:fix": "eslint --fix ./ --ext .ts --ext .tsx",
    "check": "pnpm format:check && pnpm lint:check && pnpm type:check",
    "fix": "pnpm format:fix && pnpm lint:fix"
  },
  "dependencies": {
    "@botpress/cli": "workspace:*",
    "@stoplight/spectral-cli": "^6.6.0",
    "@stoplight/spectral-core": "^1.16.1",
    "@tsconfig/node18-strictest": "^1.0.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
