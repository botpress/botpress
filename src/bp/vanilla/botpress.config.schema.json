{
  "type": "object",
  "properties": {
    "appSecret": {
      "type": "string"
    },
    "httpServer": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "number"
        },
        "backlog": {
          "type": "number"
        },
        "bodyLimit": {
          "type": ["string", "number"]
        },
        "cors": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "origin": {
              "type": "string"
            }
          }
        },
        "session": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "maxAge": {
              "type": "string"
            }
          }
        }
      },
      "required": ["backlog", "bodyLimit", "cors", "host", "port"]
    },
    "database": {
      "$ref": "#/definitions/DatabaseConfig"
    },
    "ghost": {
      "type": "object",
      "properties": {
        "enabled": {
          "enum": ["$isDevelopment", "$isProduction", false, true]
        }
      },
      "required": ["enabled"]
    },
    "dialog": {
      "$ref": "#/definitions/DialogConfig"
    },
    "logs": {
      "$ref": "#/definitions/LogsConfig"
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          }
        },
        "required": ["enabled", "location"]
      }
    },
    "licenseKey": {
      "description": "The license key for the server.  Optionally you can use the BP_LICENSE_KEY env variable.\nYou can purchase a license on https://botpress.io\nFor usage with Botpress Pro/Enterprise.",
      "type": "string"
    },
    "sendUsageStats": {
      "type": "boolean"
    }
  },
  "required": [
    "sendUsageStats",
    "database",
    "dialog",
    "ghost",
    "httpServer",
    "appSecret",
    "licenseKey",
    "logs",
    "modules"
  ],
  "definitions": {
    "DatabaseConfig": {
      "type": "object",
      "properties": {
        "migrations": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/DatabaseType"
        },
        "url": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "number"
        },
        "user": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "ssl": {
          "type": "boolean"
        },
        "database": {
          "type": "string"
        }
      },
      "required": ["type"]
    },
    "DatabaseType": {
      "enum": ["postgres", "sqlite"],
      "type": "string"
    },
    "DialogConfig": {
      "type": "object",
      "properties": {
        "janitorInterval": {
          "type": "string"
        },
        "timeoutInterval": {
          "type": "string"
        }
      },
      "required": ["janitorInterval", "timeoutInterval"]
    },
    "LogsConfig": {
      "type": "object",
      "properties": {
        "expiration": {
          "type": "string"
        },
        "janitorInterval": {
          "type": "string"
        }
      },
      "required": ["expiration", "janitorInterval"]
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
