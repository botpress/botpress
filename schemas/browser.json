{
  "name": "browser",
  "version": "0.4.1",
  "title": "Browser",
  "description": "Capture screenshots and retrieve web page content with metadata for automated browsing and data extraction.",
  "actions": {
    "captureScreenshot": {
      "title": "Capture Screenshot",
      "description": "Capture a screenshot of the specified page.",
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            }
          },
          "required": ["url"],
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "imageUrl": {
              "type": "string"
            }
          },
          "required": ["imageUrl"],
          "additionalProperties": false
        }
      },
      "cacheable": true,
      "billable": true
    },
    "browsePages": {
      "title": "Browse Pages",
      "description": "Extract the full content & the metadata of the specified pages as markdown.",
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "urls": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "waitFor": {
              "type": "number",

              "default": 350,
              "description": "Time to wait before extracting the content (in milliseconds). Set this value higher for dynamic pages."
            }
          },
          "required": ["urls"],
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "results": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  },
                  "favicon": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": ["url", "content"],
                "additionalProperties": false
              }
            }
          },
          "required": ["results"],
          "additionalProperties": false
        }
      },
      "cacheable": true,
      "billable": true
    },
    "webSearch": {
      "title": "Web Search",
      "description": "Search information on the web. You need to browse to that page to get the full content of the page.",
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "minLength": 1,
              "maxLength": 1000,
              "description": "What are we searching for?"
            },
            "includeSites": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^(?:[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?\\.)+[a-z]{2,}$",
                "minLength": 3,
                "maxLength": 50
              },
              "maxItems": 20,

              "description": "Include only these domains in the search (max 20)"
            },
            "excludeSites": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^(?:[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?\\.)+[a-z]{2,}$",
                "minLength": 3,
                "maxLength": 50
              },
              "maxItems": 20,

              "description": "Exclude these domains from the search (max 20)"
            },
            "count": {
              "type": "number",
              "minimum": 1,
              "maximum": 20,

              "default": 10,
              "description": "Number of search results to return (default: 10)"
            },
            "freshness": {
              "type": "string",
              "enum": ["Day", "Week", "Month"],

              "description": "Only consider results from the last day, week or month"
            },
            "browsePages": {
              "type": "boolean",

              "default": false,
              "description": "Whether to browse to the pages to get the full content"
            }
          },
          "required": ["query"],
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "results": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Title of the page"
                  },
                  "url": {
                    "type": "string",
                    "description": "URL of the page"
                  },
                  "snippet": {
                    "type": "string",
                    "description": "A short summary of the page"
                  },
                  "links": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "url": {
                          "type": "string"
                        }
                      },
                      "required": ["name", "url"],
                      "additionalProperties": false
                    },

                    "description": "Useful links on the page"
                  },
                  "page": {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string"
                      },
                      "content": {
                        "type": "string"
                      },
                      "favicon": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    },
                    "required": ["url", "content"],
                    "additionalProperties": false
                  }
                },
                "required": ["name", "url", "snippet"],
                "additionalProperties": false
              }
            }
          },
          "required": ["results"],
          "additionalProperties": false
        }
      },
      "cacheable": true
    }
  },
  "interfaces": {}
}
