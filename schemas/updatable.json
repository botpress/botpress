{
  "name": "updatable",
  "version": "0.0.1",
  "entities": {
    "item": {
      "schema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    }
  },
  "events": {
    "updated": {
      "schema": {
        "type": "object",
        "properties": {
          "item": {
            "allOf": [
              {
                "$ref": "item"
              },
              {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  }
                },
                "required": ["id"]
              }
            ]
          }
        },
        "required": ["item"],
        "additionalProperties": false
      }
    }
  },
  "actions": {
    "update": {
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "item": {
              "$ref": "item"
            }
          },
          "required": ["id", "item"],
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "item": {
              "allOf": [
                {
                  "$ref": "item"
                },
                {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  },
                  "required": ["id"]
                }
              ]
            }
          },
          "required": ["item"],
          "additionalProperties": false
        }
      }
    }
  },
  "channels": {}
}
