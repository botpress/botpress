{
  "name": "llm",
  "version": "8.0.0",
  "entities": {
    "modelRef": {
      "schema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    }
  },
  "events": {},
  "actions": {
    "generateContent": {
      "billable": true,
      "cacheable": true,
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "model": {
              "$ref": "modelRef",
              "description": "Model to use for content generation"
            },
            "reasoningEffort": {
              "type": "string",
              "enum": ["low", "medium", "high"],

              "description": "Reasoning effort level to use for models that support reasoning"
            },
            "systemPrompt": {
              "type": "string",

              "description": "Optional system prompt to guide the model"
            },
            "messages": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "role": {
                    "type": "string",
                    "enum": ["user", "assistant"]
                  },
                  "type": {
                    "type": "string",
                    "enum": ["text", "tool_calls", "tool_result", "multipart"],

                    "default": "text"
                  },
                  "toolCalls": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string",
                          "enum": ["function"]
                        },
                        "function": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "arguments": {
                              "anyOf": [
                                {
                                  "type": "object",
                                  "additionalProperties": {}
                                },
                                {
                                  "type": "null"
                                }
                              ],
                              "description": "Some LLMs may generate invalid JSON for a tool call, so this will be `null` when it happens."
                            }
                          },
                          "required": ["name", "arguments"],
                          "additionalProperties": false
                        }
                      },
                      "required": ["id", "type", "function"],
                      "additionalProperties": false
                    },

                    "description": "Required if `type` is \"tool_calls\""
                  },
                  "toolResultCallId": {
                    "type": "string",

                    "description": "Required if `type` is \"tool_result\""
                  },
                  "content": {
                    "anyOf": [
                      {
                        "anyOf": [
                          {
                            "type": "string"
                          },
                          {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "type": {
                                  "type": "string",
                                  "enum": ["text", "image"]
                                },
                                "mimeType": {
                                  "type": "string",

                                  "description": "Indicates the MIME type of the content. If not provided it will be detected from the content-type header of the provided URL."
                                },
                                "text": {
                                  "type": "string",

                                  "description": "Required if part type is \"text\" "
                                },
                                "url": {
                                  "type": "string",

                                  "description": "Required if part type is \"image\""
                                }
                              },
                              "required": ["type"],
                              "additionalProperties": false
                            }
                          }
                        ]
                      },
                      {
                        "type": "null"
                      }
                    ],
                    "description": "Required unless `type` is \"tool_call\". If `type` is \"multipart\", this field must be an array of content objects. If `type` is \"tool_result\" then this field should be the result of the tool call (a plain string or a JSON-encoded array or object). If `type` is \"tool_call\" then the `toolCalls` field should be used instead."
                  }
                },
                "required": ["role", "content"],
                "additionalProperties": false
              },
              "description": "Array of messages for the model to process"
            },
            "responseFormat": {
              "type": "string",
              "enum": ["text", "json_object"],

              "description": "Response format expected from the model. If \"json_object\" is chosen, you must instruct the model to generate JSON either via the system prompt or a user message."
            },
            "maxTokens": {
              "type": "number",

              "description": "Maximum number of tokens allowed in the generated response"
            },
            "temperature": {
              "type": "number",
              "minimum": 0,
              "maximum": 2,
              "x-zui": {
                "displayAs": [
                  "slider",
                  {
                    "stepSize": 0.01,
                    "horizontal": true
                  }
                ]
              },
              "default": 1,
              "description": "Sampling temperature for the model. Higher values result in more random outputs."
            },
            "topP": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "x-zui": {
                "displayAs": [
                  "slider",
                  {
                    "stepSize": 0.01,
                    "horizontal": true
                  }
                ]
              },
              "default": 1,
              "description": "Top-p sampling parameter. Limits sampling to the smallest set of tokens with a cumulative probability above the threshold."
            },
            "stopSequences": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "maxItems": 4,

              "description": "Sequences where the model should stop generating further tokens."
            },
            "tools": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "function"
                  },
                  "function": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Function name"
                      },
                      "description": {
                        "type": "string"
                      },
                      "argumentsSchema": {
                        "type": "object",
                        "properties": {},
                        "additionalProperties": true,

                        "description": "JSON schema of the function arguments"
                      }
                    },
                    "required": ["name"],
                    "additionalProperties": false
                  }
                },
                "required": ["type", "function"],
                "additionalProperties": false
              }
            },
            "toolChoice": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["auto", "specific", "any", "none", ""]
                },
                "functionName": {
                  "type": "string",

                  "description": "Required if `type` is \"specific\""
                }
              },
              "additionalProperties": false
            },
            "userId": {
              "type": "string"
            },
            "debug": {
              "type": "boolean",
              "x-zui": {
                "hidden": true
              },
              "description": "Set to `true` to output debug information to the bot logs"
            },
            "meta": {
              "type": "object",
              "properties": {
                "promptSource": {
                  "type": "string",

                  "description": "Source of the prompt, e.g. agent/:id/:version cards/ai-generate, cards/ai-task, nodes/autonomous, etc."
                },
                "promptCategory": {
                  "type": "string"
                },
                "integrationName": {
                  "type": "string",

                  "description": "Name of the integration that originally received the message that initiated this action"
                }
              },
              "additionalProperties": false,
              "x-zui": {
                "hidden": true
              }
            }
          },
          "required": ["messages"],
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Response ID from LLM provider"
            },
            "provider": {
              "type": "string",
              "description": "LLM provider name"
            },
            "model": {
              "type": "string",
              "description": "Model name"
            },
            "choices": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["text", "tool_calls", "tool_result", "multipart"],

                    "default": "text"
                  },
                  "toolCalls": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string",
                          "enum": ["function"]
                        },
                        "function": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "arguments": {
                              "anyOf": [
                                {
                                  "type": "object",
                                  "additionalProperties": {}
                                },
                                {
                                  "type": "null"
                                }
                              ],
                              "description": "Some LLMs may generate invalid JSON for a tool call, so this will be `null` when it happens."
                            }
                          },
                          "required": ["name", "arguments"],
                          "additionalProperties": false
                        }
                      },
                      "required": ["id", "type", "function"],
                      "additionalProperties": false
                    },

                    "description": "Required if `type` is \"tool_calls\""
                  },
                  "toolResultCallId": {
                    "type": "string",

                    "description": "Required if `type` is \"tool_result\""
                  },
                  "content": {
                    "anyOf": [
                      {
                        "anyOf": [
                          {
                            "type": "string"
                          },
                          {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "type": {
                                  "type": "string",
                                  "enum": ["text", "image"]
                                },
                                "mimeType": {
                                  "type": "string",

                                  "description": "Indicates the MIME type of the content. If not provided it will be detected from the content-type header of the provided URL."
                                },
                                "text": {
                                  "type": "string",

                                  "description": "Required if part type is \"text\" "
                                },
                                "url": {
                                  "type": "string",

                                  "description": "Required if part type is \"image\""
                                }
                              },
                              "required": ["type"],
                              "additionalProperties": false
                            }
                          }
                        ]
                      },
                      {
                        "type": "null"
                      }
                    ],
                    "description": "Required unless `type` is \"tool_call\". If `type` is \"multipart\", this field must be an array of content objects. If `type` is \"tool_result\" then this field should be the result of the tool call (a plain string or a JSON-encoded array or object). If `type` is \"tool_call\" then the `toolCalls` field should be used instead."
                  },
                  "role": {
                    "type": "string",
                    "const": "assistant"
                  },
                  "index": {
                    "type": "integer"
                  },
                  "stopReason": {
                    "type": "string",
                    "enum": ["stop", "max_tokens", "tool_calls", "content_filter", "other"]
                  }
                },
                "required": ["content", "role", "index", "stopReason"],
                "additionalProperties": false
              }
            },
            "usage": {
              "type": "object",
              "properties": {
                "inputTokens": {
                  "type": "integer",
                  "description": "Number of input tokens used by the model"
                },
                "inputCost": {
                  "type": "number",
                  "description": "Cost of the input tokens received by the model, in U.S. dollars"
                },
                "outputTokens": {
                  "type": "integer",
                  "description": "Number of output tokens used by the model"
                },
                "outputCost": {
                  "type": "number",
                  "description": "Cost of the output tokens generated by the model, in U.S. dollars"
                }
              },
              "required": ["inputTokens", "inputCost", "outputTokens", "outputCost"],
              "additionalProperties": false
            },
            "botpress": {
              "type": "object",
              "properties": {
                "cost": {
                  "type": "number",
                  "description": "Total cost of the content generation, in U.S. dollars"
                }
              },
              "required": ["cost"],
              "additionalProperties": false
            }
          },
          "required": ["id", "provider", "model", "choices", "usage", "botpress"],
          "additionalProperties": false
        }
      }
    },
    "listLanguageModels": {
      "input": {
        "schema": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "models": {
              "type": "array",
              "items": {
                "allOf": [
                  {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "tags": {
                        "type": "array",
                        "items": {
                          "type": "string",
                          "enum": [
                            "recommended",
                            "deprecated",
                            "general-purpose",
                            "low-cost",
                            "vision",
                            "coding",
                            "agents",
                            "function-calling",
                            "roleplay",
                            "storytelling",
                            "reasoning",
                            "preview"
                          ]
                        }
                      },
                      "input": {
                        "type": "object",
                        "properties": {
                          "maxTokens": {
                            "type": "integer"
                          },
                          "costPer1MTokens": {
                            "type": "number",
                            "description": "Cost per 1 million tokens, in U.S. dollars"
                          }
                        },
                        "required": ["maxTokens", "costPer1MTokens"],
                        "additionalProperties": false
                      },
                      "output": {
                        "type": "object",
                        "properties": {
                          "maxTokens": {
                            "type": "integer"
                          },
                          "costPer1MTokens": {
                            "type": "number",
                            "description": "Cost per 1 million tokens, in U.S. dollars"
                          }
                        },
                        "required": ["maxTokens", "costPer1MTokens"],
                        "additionalProperties": false
                      }
                    },
                    "required": ["id", "name", "description", "tags", "input", "output"]
                  },
                  {
                    "$ref": "modelRef"
                  }
                ]
              }
            }
          },
          "required": ["models"],
          "additionalProperties": false
        }
      }
    }
  },
  "channels": {}
}
