{
  "name": "chat",
  "version": "0.6.0",
  "title": "Chat",
  "description": "Chat integration for Botpress; Allows interacting with your bot using HTTP requests.",
  "user": {
    "tags": {
      "fid": {
        "title": "fid",
        "description": "This tag is of no use and only exists for historical reasons"
      },
      "profile": {
        "title": "User Profile",
        "description": "Custom profile data of the user encoded as a string"
      }
    }
  },
  "events": {
    "custom": {
      "title": "Custom Event",
      "description": "Custom event sent from the chat client to the bot",
      "schema": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "conversationId": {
            "type": "string"
          },
          "payload": {
            "type": "object",
            "additionalProperties": {}
          }
        },
        "required": ["userId", "conversationId", "payload"],
        "additionalProperties": false
      }
    }
  },
  "actions": {
    "sendEvent": {
      "title": "Send Custom Event",
      "description": "Send a custom event from the bot to the chat client",
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "conversationId": {
              "type": "string"
            },
            "payload": {
              "type": "object",
              "additionalProperties": {}
            }
          },
          "required": ["conversationId", "payload"],
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      }
    }
  },
  "channels": {
    "channel": {
      "conversation": {
        "tags": {
          "owner": {
            "title": "Conversation Owner",
            "description": "ID of the user who created the conversation"
          },
          "fid": {
            "title": "fid",
            "description": "This tag is of no use and only exists for historical reasons"
          }
        }
      },
      "messages": {
        "text": {
          "schema": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string",
                "minLength": 1
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["text"],
            "additionalProperties": false
          }
        },
        "image": {
          "schema": {
            "type": "object",
            "properties": {
              "imageUrl": {
                "type": "string",
                "minLength": 1
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["imageUrl"],
            "additionalProperties": false
          }
        },
        "audio": {
          "schema": {
            "type": "object",
            "properties": {
              "audioUrl": {
                "type": "string",
                "minLength": 1
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["audioUrl"],
            "additionalProperties": false
          }
        },
        "video": {
          "schema": {
            "type": "object",
            "properties": {
              "videoUrl": {
                "type": "string",
                "minLength": 1
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["videoUrl"],
            "additionalProperties": false
          }
        },
        "file": {
          "schema": {
            "type": "object",
            "properties": {
              "fileUrl": {
                "type": "string",
                "minLength": 1
              },
              "title": {
                "type": "string",
                "minLength": 1
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["fileUrl"],
            "additionalProperties": false
          }
        },
        "location": {
          "schema": {
            "type": "object",
            "properties": {
              "latitude": {
                "type": "number"
              },
              "longitude": {
                "type": "number"
              },
              "address": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["latitude", "longitude"],
            "additionalProperties": false
          }
        },
        "carousel": {
          "schema": {
            "type": "object",
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "minLength": 1
                    },
                    "subtitle": {
                      "type": "string",
                      "minLength": 1
                    },
                    "imageUrl": {
                      "type": "string",
                      "minLength": 1
                    },
                    "actions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "action": {
                            "type": "string",
                            "enum": ["postback", "url", "say"]
                          },
                          "label": {
                            "type": "string",
                            "minLength": 1
                          },
                          "value": {
                            "type": "string",
                            "minLength": 1
                          }
                        },
                        "required": ["action", "label", "value"],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": ["title", "actions"],
                  "additionalProperties": false
                }
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["items"],
            "additionalProperties": false
          }
        },
        "card": {
          "schema": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "minLength": 1
              },
              "subtitle": {
                "type": "string",
                "minLength": 1
              },
              "imageUrl": {
                "type": "string",
                "minLength": 1
              },
              "actions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "action": {
                      "type": "string",
                      "enum": ["postback", "url", "say"]
                    },
                    "label": {
                      "type": "string",
                      "minLength": 1
                    },
                    "value": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": ["action", "label", "value"],
                  "additionalProperties": false
                }
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["title", "actions"],
            "additionalProperties": false
          }
        },
        "dropdown": {
          "schema": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": {
                      "type": "string",
                      "minLength": 1
                    },
                    "value": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": ["label", "value"],
                  "additionalProperties": false
                }
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["text", "options"],
            "additionalProperties": false
          }
        },
        "choice": {
          "schema": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": {
                      "type": "string",
                      "minLength": 1
                    },
                    "value": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": ["label", "value"],
                  "additionalProperties": false
                }
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["text", "options"],
            "additionalProperties": false
          }
        },
        "bloc": {
          "schema": {
            "type": "object",
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "anyOf": [
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "text"
                        },
                        "payload": {
                          "type": "object",
                          "properties": {
                            "text": {
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": ["text"],
                          "additionalProperties": false
                        }
                      },
                      "required": ["type", "payload"],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "markdown"
                        },
                        "payload": {
                          "type": "object",
                          "properties": {
                            "markdown": {
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": ["markdown"],
                          "additionalProperties": false
                        }
                      },
                      "required": ["type", "payload"],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "image"
                        },
                        "payload": {
                          "type": "object",
                          "properties": {
                            "imageUrl": {
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": ["imageUrl"],
                          "additionalProperties": false
                        }
                      },
                      "required": ["type", "payload"],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "audio"
                        },
                        "payload": {
                          "type": "object",
                          "properties": {
                            "audioUrl": {
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": ["audioUrl"],
                          "additionalProperties": false
                        }
                      },
                      "required": ["type", "payload"],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "video"
                        },
                        "payload": {
                          "type": "object",
                          "properties": {
                            "videoUrl": {
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": ["videoUrl"],
                          "additionalProperties": false
                        }
                      },
                      "required": ["type", "payload"],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "file"
                        },
                        "payload": {
                          "type": "object",
                          "properties": {
                            "fileUrl": {
                              "type": "string",
                              "minLength": 1
                            },
                            "title": {
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": ["fileUrl"],
                          "additionalProperties": false
                        }
                      },
                      "required": ["type", "payload"],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "location"
                        },
                        "payload": {
                          "type": "object",
                          "properties": {
                            "latitude": {
                              "type": "number"
                            },
                            "longitude": {
                              "type": "number"
                            },
                            "address": {
                              "type": "string"
                            },
                            "title": {
                              "type": "string"
                            }
                          },
                          "required": ["latitude", "longitude"],
                          "additionalProperties": false
                        }
                      },
                      "required": ["type", "payload"],
                      "additionalProperties": false
                    }
                  ]
                }
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["items"],
            "additionalProperties": false
          }
        },
        "markdown": {
          "schema": {
            "type": "object",
            "properties": {
              "markdown": {
                "type": "string",
                "minLength": 1
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": ["markdown"],
            "additionalProperties": false
          }
        }
      },
      "message": {
        "tags": {
          "fid": {
            "title": "fid",
            "description": "This tag is of no use and only exists for historical reasons"
          }
        }
      }
    }
  },
  "interfaces": {}
}
