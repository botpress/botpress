{
  "actions": {
    "getEmail": {
      "description": "Get the email with specified id from the inbox",
      "input": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string"
            }
          },
          "required": ["id"],
          "type": "object"
        }
      },
      "output": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "body": {
              "type": "string"
            },
            "date": {
              "description": "ISO datetime",
              "type": "string"
            },
            "firstMessageId": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "inReplyTo": {
              "type": "string"
            },
            "sender": {
              "type": "string"
            },
            "subject": {
              "type": "string"
            }
          },
          "required": ["id", "subject", "sender"],
          "type": "object"
        }
      },
      "title": "Get emails"
    },
    "listEmails": {
      "description": "List all emails in the inbox",
      "input": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "nextToken": {
              "description": "The page number in the inbox. Starts at 0",
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "output": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "messages": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "date": {
                    "description": "ISO datetime",
                    "type": "string"
                  },
                  "firstMessageId": {
                    "type": "string"
                  },
                  "id": {
                    "type": "string"
                  },
                  "inReplyTo": {
                    "type": "string"
                  },
                  "sender": {
                    "type": "string"
                  },
                  "subject": {
                    "type": "string"
                  }
                },
                "required": ["id", "subject", "sender"],
                "type": "object"
              },
              "type": "array"
            },
            "nextToken": {
              "type": "string"
            }
          },
          "required": ["messages"],
          "type": "object"
        }
      },
      "title": "List emails"
    },
    "sendEmail": {
      "description": "Send an email using SMTP",
      "input": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "inReplyTo": {
              "description": "The id of the email you want to reply to",
              "type": "string"
            },
            "replyTo": {
              "description": "The email address to which replies should be sent. This allows recipients to reply to a different address than the sender",
              "type": "string"
            },
            "subject": {
              "description": "The subject of the outgoing email",
              "type": "string"
            },
            "text": {
              "description": "The text contained in the body of the email",
              "type": "string"
            },
            "to": {
              "description": "The email address of the recipient",
              "type": "string"
            }
          },
          "required": ["to"],
          "type": "object"
        }
      },
      "output": {
        "schema": {
          "additionalProperties": false,
          "properties": {},
          "type": "object"
        }
      },
      "title": "Send Email"
    },
    "syncEmails": {
      "description": "Sends unseen emails as new messages. Call periodically to allow your bot to receive new emails.",
      "input": {
        "schema": {
          "additionalProperties": false,
          "properties": {},
          "type": "object"
        }
      },
      "output": {
        "schema": {
          "additionalProperties": false,
          "properties": {},
          "type": "object"
        }
      },
      "title": "Sync Emails"
    }
  },
  "channels": {
    "default": {
      "conversation": {
        "tags": {
          "firstMessageId": {
            "description": "The id (from the IMAP server) of the first incoming message of the conversation",
            "title": "First Message Id"
          },
          "latestEmail": {
            "description": "The id of the latest email received (to put in the In-Reply-To header)",
            "title": "Email id"
          },
          "subject": {
            "description": "Subject for the conversation",
            "title": "Thread Subject"
          },
          "to": {
            "description": "Recipient email address for the conversation",
            "title": "Recipient"
          }
        }
      },
      "message": {
        "tags": {
          "id": {
            "description": "The email id ",
            "title": "Email id"
          }
        }
      },
      "messages": {
        "text": {
          "schema": {
            "additionalProperties": false,
            "properties": {
              "text": {
                "minLength": 1,
                "type": "string"
              }
            },
            "required": ["text"],
            "type": "object"
          }
        }
      }
    }
  },
  "interfaces": {},
  "name": "email",
  "states": {
    "lastSyncTimestamp": {
      "schema": {
        "additionalProperties": false,
        "properties": {
          "lastSyncTimestamp": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": ["lastSyncTimestamp"],
        "type": "object"
      },
      "type": "integration"
    },
    "syncLock": {
      "schema": {
        "additionalProperties": false,
        "properties": {
          "currentlySyncing": {
            "default": false,
            "type": "boolean"
          }
        },
        "type": "object"
      },
      "type": "integration"
    }
  },
  "user": {
    "tags": {
      "email": {
        "description": "Required",
        "title": "User email"
      }
    }
  },
  "version": "0.1.0"
}
