{
  "actions": {
    "startTypingIndicator": {
      "input": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "conversationId": { "type": "string" },
            "messageId": {
              "description": "The message ID to which the typing indicator should be attached",
              "type": "string"
            },
            "timeout": {
              "description": "The timeout in milliseconds after which the typing indicator should stop",
              "type": "number"
            }
          },
          "required": ["conversationId", "messageId"],
          "type": "object"
        }
      },
      "output": { "schema": { "additionalProperties": false, "properties": {}, "type": "object" } }
    },
    "stopTypingIndicator": {
      "input": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "conversationId": { "type": "string" },
            "messageId": {
              "description": "The message ID from which the typing indicator should be removed",
              "type": "string"
            }
          },
          "required": ["conversationId", "messageId"],
          "type": "object"
        }
      },
      "output": { "schema": { "additionalProperties": false, "properties": {}, "type": "object" } }
    }
  },
  "channels": {},
  "entities": {},
  "events": {},
  "name": "typingIndicator",
  "version": "0.0.1"
}
