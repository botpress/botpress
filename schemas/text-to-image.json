{
  "name": "textToImage",
  "version": "2.1.0",
  "entities": {
    "imageModelRef": {
      "schema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "required": [
          "id"
        ]
      }
    },
    "imageGenerationParams": {
      "schema": {
        "type": "object",
        "description": "Model-specific parameters for image generation",
        "properties": {},
        "required": []
      }
    }
  },
  "events": {},
  "actions": {
    "generateImage": {
      "billable": true,
      "cacheable": true,
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "model": {
              "$ref": "imageModelRef"
            },
            "prompt": {
              "type": "string"
            },
            "size": {
              "type": "string"
            },
            "expiration": {
              "type": "integer",
              "minimum": 30,
              "maximum": 90
            },
            "params": {
              "$ref": "imageGenerationParams"
            }
          },
          "required": [
            "prompt"
          ]
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "model": {
              "type": "string",
              "description": "Model name used"
            },
            "imageUrl": {
              "type": "string",
              "description": "Temporary URL of generated image"
            },
            "cost": {
              "type": "number",
              "description": "Cost of the image generation, in U.S. dollars (DEPRECATED)"
            },
            "botpress": {
              "type": "object",
              "properties": {
                "cost": {
                  "type": "number",
                  "description": "Cost of the image generation, in U.S. dollars"
                }
              },
              "required": [
                "cost"
              ]
            }
          },
          "required": [
            "model",
            "imageUrl",
            "cost",
            "botpress"
          ]
        }
      }
    },
    "listImageModels": {
      "input": {
        "schema": {
          "type": "object",
          "properties": {},
          "required": []
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "models": {
              "type": "array",
              "items": {
                "allOf": [
                  {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "costPerImage": {
                        "type": "number",
                        "description": "Cost per image generation, in U.S. dollars"
                      },
                      "sizes": {
                        "type": "array",
                        "description": "Available image sizes",
                        "items": {
                          "type": "string"
                        }
                      },
                      "defaultSize": {
                        "type": "string",
                        "description": "Default image size generated by model"
                      }
                    },
                    "required": [
                      "id",
                      "name",
                      "costPerImage",
                      "sizes",
                      "defaultSize"
                    ]
                  },
                  {
                    "$ref": "imageModelRef"
                  }
                ]
              }
            }
          },
          "required": [
            "models"
          ]
        }
      }
    }
  },
  "channels": {}
}
