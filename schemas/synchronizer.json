{
  "name": "synchronizer",
  "version": "0.0.1",
  "user": {
    "tags": {}
  },
  "conversation": {
    "tags": {}
  },
  "configuration": {
    "schema": {
      "type": "object",
      "properties": {
        "tableName": {
          "type": "string",
          "description": "The name of the table to store items",
          "x-zui": {
            "title": "Table Name"
          }
        }
      },
      "required": ["tableName"],
      "additionalProperties": false
    }
  },
  "events": {
    "listItems": {
      "schema": {
        "type": "object",
        "properties": {},
        "additionalProperties": false
      }
    },
    "rowInserted": {
      "schema": {
        "type": "object",
        "properties": {
          "row": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              }
            },
            "required": ["id"],
            "additionalProperties": false
          }
        },
        "required": ["row"],
        "additionalProperties": false
      }
    },
    "rowUpdated": {
      "schema": {
        "type": "object",
        "properties": {
          "row": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              }
            },
            "required": ["id"],
            "additionalProperties": false
          }
        },
        "required": ["row"],
        "additionalProperties": false
      }
    },
    "rowDeleted": {
      "schema": {
        "type": "object",
        "properties": {
          "row": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              }
            },
            "required": ["id"],
            "additionalProperties": false
          }
        },
        "required": ["row"],
        "additionalProperties": false
      }
    }
  },
  "actions": {
    "synchronize": {
      "title": "Synchronize",
      "description": "Manually synchronize a page of items without waiting for the cron job",
      "input": {
        "schema": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "itemsLeft": {
              "type": "boolean"
            }
          },
          "required": ["itemsLeft"],
          "additionalProperties": false
        }
      }
    },
    "clear": {
      "title": "Clear",
      "description": "Clear the table",
      "input": {
        "schema": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      }
    }
  },
  "states": {
    "table": {
      "type": "bot",
      "schema": {
        "type": "object",
        "properties": {
          "tableCreated": {
            "type": "boolean",
            "x-zui": {
              "title": "Table Created"
            },
            "description": "Whether the table has been created"
          }
        },
        "additionalProperties": false
      }
    },
    "job": {
      "type": "bot",
      "schema": {
        "type": "object",
        "properties": {
          "nextToken": {
            "type": "string",
            "x-zui": {
              "title": "Next Token"
            },
            "description": "The token to use to get the next page of items"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
