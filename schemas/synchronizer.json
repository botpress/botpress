{
  "actions": {
    "clear": {
      "description": "Clear the table",
      "input": { "schema": { "additionalProperties": false, "properties": {}, "type": "object" } },
      "output": { "schema": { "additionalProperties": false, "properties": {}, "type": "object" } },
      "title": "Clear"
    },
    "synchronize": {
      "description": "Manually synchronize a page of items without waiting for the cron job",
      "input": { "schema": { "additionalProperties": false, "properties": {}, "type": "object" } },
      "output": {
        "schema": {
          "additionalProperties": false,
          "properties": { "itemsLeft": { "type": "boolean" } },
          "required": ["itemsLeft"],
          "type": "object"
        }
      },
      "title": "Synchronize"
    }
  },
  "configuration": {
    "schema": {
      "additionalProperties": false,
      "properties": {
        "tableName": {
          "description": "The name of the table to store items",
          "type": "string",
          "x-zui": { "title": "Table Name" }
        }
      },
      "required": ["tableName"],
      "type": "object"
    }
  },
  "conversation": { "tags": {} },
  "events": {
    "listItems": { "schema": { "additionalProperties": false, "properties": {}, "type": "object" } },
    "rowDeleted": {
      "schema": {
        "additionalProperties": false,
        "properties": {
          "row": {
            "additionalProperties": false,
            "properties": { "id": { "type": "string" } },
            "required": ["id"],
            "type": "object"
          }
        },
        "required": ["row"],
        "type": "object"
      }
    },
    "rowInserted": {
      "schema": {
        "additionalProperties": false,
        "properties": {
          "row": {
            "additionalProperties": false,
            "properties": { "id": { "type": "string" } },
            "required": ["id"],
            "type": "object"
          }
        },
        "required": ["row"],
        "type": "object"
      }
    },
    "rowUpdated": {
      "schema": {
        "additionalProperties": false,
        "properties": {
          "row": {
            "additionalProperties": false,
            "properties": { "id": { "type": "string" } },
            "required": ["id"],
            "type": "object"
          }
        },
        "required": ["row"],
        "type": "object"
      }
    }
  },
  "name": "synchronizer",
  "states": {
    "job": {
      "schema": {
        "additionalProperties": false,
        "properties": {
          "nextToken": {
            "description": "The token to use to get the next page of items",
            "type": "string",
            "x-zui": { "title": "Next Token" }
          }
        },
        "type": "object"
      },
      "type": "bot"
    },
    "table": {
      "schema": {
        "additionalProperties": false,
        "properties": {
          "tableCreated": {
            "description": "Whether the table has been created",
            "type": "boolean",
            "x-zui": { "title": "Table Created" }
          }
        },
        "type": "object"
      },
      "type": "bot"
    }
  },
  "user": { "tags": {} },
  "version": "0.0.1"
}
