{
  "actions": {
    "listSpeechToTextModels": {
      "input": { "schema": { "additionalProperties": false, "properties": {}, "type": "object" } },
      "output": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "models": {
              "items": {
                "allOf": [
                  {
                    "properties": {
                      "costPerMinute": {
                        "description": "Cost per minute of speech transcription, in U.S. dollars",
                        "type": "number"
                      },
                      "id": { "type": "string" },
                      "name": { "type": "string" }
                    },
                    "required": ["id", "name", "costPerMinute"],
                    "type": "object"
                  },
                  { "$ref": "speechToTextModelRef" }
                ]
              },
              "type": "array"
            }
          },
          "required": ["models"],
          "type": "object"
        }
      }
    },
    "transcribeAudio": {
      "billable": true,
      "cacheable": true,
      "input": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "fileUrl": {
              "description": "URL of the audio file to transcribe. The URL should return a content-type header in order to detect the audio format. Supported audio formats supported are: mp3, mp4, mpeg, mpga, m4a, wav, webm",
              "format": "uri",
              "type": "string"
            },
            "language": {
              "description": "The language of the input audio (optional). Supplying the input language in ISO-639-1 format will improve accuracy and latency.",
              "type": "string"
            },
            "model": {
              "$ref": "speechToTextModelRef",
              "description": "Model to use for speech-to-text transcription (optional)"
            },
            "prompt": {
              "description": "An optional text to guide the model's style or continue a previous audio segment. The prompt should match the audio language.",
              "type": "string"
            },
            "temperature": {
              "default": 0,
              "description": "The sampling temperature (optional), between 0 and 1. Defaults to 0 (automatic). Higher values like 0.8 will make the output more random, while lower values like 0.2 will make it more focused and deterministic.",
              "type": "number"
            }
          },
          "required": ["fileUrl"],
          "type": "object"
        }
      },
      "output": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "botpress": {
              "additionalProperties": false,
              "properties": {
                "cost": { "description": "Total cost of the transcription, in U.S. dollars", "type": "number" }
              },
              "required": ["cost"],
              "type": "object"
            },
            "cost": {
              "description": "Total cost of the transcription, in U.S. dollars (DEPRECATED)",
              "type": "number"
            },
            "duration": { "description": "Duration of the audio file, in seconds", "type": "number" },
            "language": { "description": "Detected language of the audio", "type": "string" },
            "model": { "description": "Model name used", "type": "string" },
            "segments": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "avg_logprob": {
                    "description": "Average logprob of the segment. If the value is lower than -1, consider the logprobs failed.",
                    "type": "number"
                  },
                  "compression_ratio": {
                    "description": "Compression ratio of the segment. If the value is greater than 2.4, consider the compression failed.",
                    "type": "number"
                  },
                  "end": { "description": "End time of the segment in seconds.", "type": "number" },
                  "id": { "description": "Unique identifier of the segment", "type": "number" },
                  "no_speech_prob": {
                    "description": "Probability of no speech in the segment. If the value is higher than 1.0 and the avg_logprob is below -1, consider this segment silent.",
                    "type": "number"
                  },
                  "seek": { "description": "Seek offset of the segment", "type": "number" },
                  "start": { "description": "Start time of the segment in seconds.", "type": "number" },
                  "temperature": {
                    "description": "Temperature parameter used for generating the segment.",
                    "type": "number"
                  },
                  "text": { "description": "Text content of the segment.", "type": "string" },
                  "tokens": {
                    "description": "Array of token IDs for the text content.",
                    "items": { "type": "number" },
                    "type": "array"
                  }
                },
                "required": [
                  "text",
                  "id",
                  "seek",
                  "start",
                  "end",
                  "tokens",
                  "temperature",
                  "avg_logprob",
                  "compression_ratio",
                  "no_speech_prob"
                ],
                "type": "object"
              },
              "type": "array"
            }
          },
          "required": ["language", "duration", "segments", "model", "cost", "botpress"],
          "type": "object"
        }
      }
    }
  },
  "channels": {},
  "entities": {
    "speechToTextModelRef": {
      "schema": {
        "additionalProperties": false,
        "properties": { "id": { "type": "string" } },
        "required": ["id"],
        "type": "object"
      }
    }
  },
  "events": {},
  "name": "speechToText",
  "version": "2.0.0"
}
