{
  "actions": {
    "fromHtml": {
      "description": "Converts an HTML document to a PDF file",
      "input": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "filename": {
              "default": "generated.pdf",
              "description": "The filename of the PDF",
              "minLength": 1,
              "pattern": "\.pdf$",
              "type": "string"
            },
            "html": { "description": "The HTML content to convert to PDF", "minLength": 1, "type": "string" }
          },
          "required": ["html"],
          "type": "object"
        }
      },
      "output": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "fileId": { "description": "The generated PDF file ID", "type": "string" },
            "fileUrl": { "description": "The public URL to download the PDF", "type": "string" }
          },
          "required": ["fileId", "fileUrl"],
          "type": "object"
        }
      },
      "title": "HTML to PDF"
    },
    "fromMarkdown": {
      "description": "Converts a markdown content to a PDF file",
      "input": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "filename": {
              "default": "generated.pdf",
              "description": "The filename of the PDF",
              "minLength": 1,
              "pattern": "\.pdf$",
              "type": "string"
            },
            "markdown": { "description": "The markdown content to convert to PDF", "minLength": 1, "type": "string" }
          },
          "required": ["markdown"],
          "type": "object"
        }
      },
      "output": {
        "schema": {
          "additionalProperties": false,
          "properties": {
            "fileId": { "description": "The generated PDF file ID", "type": "string" },
            "fileUrl": { "description": "The public URL to download the PDF", "type": "string" }
          },
          "required": ["fileId", "fileUrl"],
          "type": "object"
        }
      },
      "title": "Markdown to PDF"
    }
  },
  "description": "Converts markdown content to PDF using PDFShift",
  "interfaces": {},
  "name": "pdf-generator",
  "version": "0.0.2"
}
