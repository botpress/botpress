{
  "name": "pdf-generator",
  "version": "0.0.2",
  "description": "Converts markdown content to PDF using PDFShift",
  "actions": {
    "fromMarkdown": {
      "title": "Markdown to PDF",
      "description": "Converts a markdown content to a PDF file",
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "markdown": {
              "type": "string",
              "description": "The markdown content to convert to PDF",
              "minLength": 1
            },
            "filename": {
              "description": "The filename of the PDF",
              "anyOf": [
                {
                  "type": "string",
                  "description": "The filename of the PDF",
                  "minLength": 1,
                  "pattern": "\\.pdf$"
                },
                {
                  "not": true,
                  "x-zui": {
                    "def": {
                      "typeName": "ZodUndefined"
                    }
                  }
                }
              ],
              "x-zui": {
                "def": {
                  "typeName": "ZodOptional"
                }
              },
              "default": "generated.pdf"
            }
          },
          "required": [
            "markdown"
          ]
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "fileId": {
              "type": "string",
              "description": "The generated PDF file ID"
            },
            "fileUrl": {
              "type": "string",
              "description": "The public URL to download the PDF"
            }
          },
          "required": [
            "fileId",
            "fileUrl"
          ]
        }
      }
    },
    "fromHtml": {
      "title": "HTML to PDF",
      "description": "Converts an HTML document to a PDF file",
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "html": {
              "type": "string",
              "description": "The HTML content to convert to PDF",
              "minLength": 1
            },
            "filename": {
              "description": "The filename of the PDF",
              "anyOf": [
                {
                  "type": "string",
                  "description": "The filename of the PDF",
                  "minLength": 1,
                  "pattern": "\\.pdf$"
                },
                {
                  "not": true,
                  "x-zui": {
                    "def": {
                      "typeName": "ZodUndefined"
                    }
                  }
                }
              ],
              "x-zui": {
                "def": {
                  "typeName": "ZodOptional"
                }
              },
              "default": "generated.pdf"
            }
          },
          "required": [
            "html"
          ]
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "fileId": {
              "type": "string",
              "description": "The generated PDF file ID"
            },
            "fileUrl": {
              "type": "string",
              "description": "The public URL to download the PDF"
            }
          },
          "required": [
            "fileId",
            "fileUrl"
          ]
        }
      }
    }
  },
  "interfaces": {}
}
