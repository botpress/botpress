{
  "name": "pdf-generator",
  "version": "0.0.2",
  "description": "Converts markdown content to PDF using PDFShift",
  "actions": {
    "fromMarkdown": {
      "title": "Markdown to PDF",
      "description": "Converts a markdown content to a PDF file",
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "markdown": {
              "type": "string",
              "minLength": 1,
              "description": "The markdown content to convert to PDF"
            },
            "filename": {
              "type": "string",
              "minLength": 1,
              "pattern": "\\.pdf$",
              "description": "The filename of the PDF",

              "default": "generated.pdf"
            }
          },
          "required": ["markdown"],
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "fileId": {
              "type": "string",
              "description": "The generated PDF file ID"
            },
            "fileUrl": {
              "type": "string",
              "description": "The public URL to download the PDF"
            }
          },
          "required": ["fileId", "fileUrl"],
          "additionalProperties": false
        }
      }
    },
    "fromHtml": {
      "title": "HTML to PDF",
      "description": "Converts an HTML document to a PDF file",
      "input": {
        "schema": {
          "type": "object",
          "properties": {
            "html": {
              "type": "string",
              "minLength": 1,
              "description": "The HTML content to convert to PDF"
            },
            "filename": {
              "type": "string",
              "minLength": 1,
              "pattern": "\\.pdf$",
              "description": "The filename of the PDF",

              "default": "generated.pdf"
            }
          },
          "required": ["html"],
          "additionalProperties": false
        }
      },
      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "fileId": {
              "type": "string",
              "description": "The generated PDF file ID"
            },
            "fileUrl": {
              "type": "string",
              "description": "The public URL to download the PDF"
            }
          },
          "required": ["fileId", "fileUrl"],
          "additionalProperties": false
        }
      }
    }
  },
  "interfaces": {}
}
